@model IEnumerable<FCSE_IT_Project.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Почетна</h2>

<style>
    .btn-delete {
        color: #fff;
        background-color: #d9534f;
        border-color: #d43f3a;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border: 1px solid transparent;
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 4px;
    }

        .btn-delete:hover {
            color: #fff;
            background-color: #ac2925;
            border-color: #761c19;
            text-decoration: none;
        }

    .btn-details {
        color: #fff;
        background-color: #5bc0de;
        border-color: #46b8da;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border: 1px solid transparent;
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 4px;
    }

        .btn-details:hover {
            color: #fff;
            background-color: #31b0d5;
            border-color: #269abc;
            text-decoration: none;
        }

    .btn-edit {
        color: #fff;
        background-color: #f0ad4e;
        border-color: #eea236;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border: 1px solid transparent;
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 4px;
    }

        .btn-edit:hover {
            color: #fff;
            background-color: #ec971f;
            border-color: #d58512;
            text-decoration: none;
        }

    .btn-ordinary {
        color: #fff;
        background-color: #337ab7;
        border-color: #2e6da4;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border: 1px solid transparent;
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 4px;
    }
        .btn-ordinary:hover {
            color: #fff;
            background-color: #286090;
            border-color: #204d74;
            text-decoration: none;
        }
</style>

<p>
    @Html.ActionLink("Креирајте нов продукт", "Create", "Products", new {@class="btn-ordinary"})
</p>
<table id="productsTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.photoURL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="@item.photoURL" style="max-width:200px" />
                </td>
                <td>
                    @if (User.IsInRole("Manager"))
                    {
                        @Html.ActionLink("Промени", "Edit", new { id = item.Id }, new { @class = "btn-edit" })
                        @Html.ActionLink("Избриши", "Delete", new { id = item.Id }, new { @class = "btn-delete" })
                    }

                    @Html.ActionLink("Детали", "Details", new { id = item.Id }, new { @class = "btn-details" })
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @if (User.IsInRole("Manager"))
    {
        @Html.ActionLink("Промени улоги", "AddUserToRole", "Account", new {@class="btn-ordinary"})
    }
</div>


@section scripts{
    <script>


        $(document).ready(function () {
            $("#productsTable").DataTable();
            
        });

    </script>
} 