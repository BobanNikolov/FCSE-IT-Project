@model IEnumerable<FCSE_IT_Project.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Почетна</h2>

<p>
    @Html.ActionLink("Креирајте нов продукт", "Create")
</p>
<table id="productsTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.photoURL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="@item.photoURL" style="max-width:200px" />
                </td>
                <td>
                    @if (User.IsInRole("Manager"))
                    {
                        @Html.ActionLink("Промени", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Избриши", "Delete", new { id = item.Id }) |
                    }
                    @Html.ActionLink("Детали", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts{
    <script>
        $(document).ready(function () {
            $("#productsTable").DataTable();
        });
    </script>
} 